<!DOCTYPE html>
<html lang="fa">
<head>
    <title>Blog</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    @Styles.Render("~/Styles/Bootstrap")
    @Styles.Render("~/Styles/Bootstrap-rtl")
    @if (IsSectionDefined("styles"))
    {
        RenderSection("styles");
    }

    @Scripts.Render("~/Scripts/JQuery", "~/Scripts/Bootstrap")
    @if (IsSectionDefined("scripts"))
    {
        RenderSection("scripts");
    }
</head>
<body dir="rtl">
    <div class="container">
        <div class="navbar navbar-default navbar-right">
            <ul class="nav navbar-nav">
                <li class="@Html.GetClassForNavbarItem("Home", "Index")">
                    @Html.ActionLink(@Resource.NavbarHome, "Index")
                </li>
                <li class="@Html.GetClassForNavbarItem("Home", "About")">
                    @Html.ActionLink(@Resource.NavbarAbout, "About")
                </li>
            </ul>
        </div>
            <div>
                <div class="row">
                    <div class="col-sm-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
    </div>
</body>
</html>
